<div class="clap-text">
  You are claped !
</div>
<%= form_tag(view_path, method: "get") do %>
  <div class="hash-tag">
    <%= text_field_tag(:hash_tag, @hash_tag, placeholder: '#') %>
    <%= button_tag("See HashTag", class: 'btn btn-info btn-lg') %>
  </div>
<% end %>

<!-- fetch count by 1 sec -->
<%= render_async count_clap_path(hash_tag: @hash_tag),
 interval: Clap::FETCH_INTERVAL * 1000,
 retry_count: 1,
 error_message: '<h3>Sorry, loading went wrong....</h3>' %>

<div class="footer">
</div>
